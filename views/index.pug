doctype html 

html
  head
    title ChatIO
    link(rel='stylesheet' href='lumen.css')
    link(rel='stylesheet' href='custom.css')
      
      
  body
    nav.navbar.navbar-default
      .container-fluid.centered
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') ChatIO
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') Home
            li
              a(href='/about') About
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/logout') Logout
    .container-fluid.centered
      .row
        .col-md-4
          h2 Users List
          ul.list-group#users
        .col-md-8
          .enterChat
            h2 Enter Chat room:
            form#createuser
              label 
                strong Username: 
              input.form-control#userInput(type='text' placeholder='Your chat username...' required)
              button.btn.btn-primary(type='submit') Enter
          .chatroom
            h2 Enjoy the RealTime converstaion:
            #messages
              ul.list-group
            #msgInput
              form#input
                textarea#msg.form-control( placeholder='Type a message...' required)
                button.btn.btn-primary(type='submit') Send
  script(src='https://code.jquery.com/jquery-3.2.1.min.js')
  script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js")
  script(src='main.js')
  
   
